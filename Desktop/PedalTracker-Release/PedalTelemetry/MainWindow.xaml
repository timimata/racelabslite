<Window x:Class="PedalTelemetry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PedalTelemetry"
        Title="Pedal Telemetry"
        Height="320" Width="540"
        MinHeight="220" MinWidth="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing">
    <Border Background="#FF1A1A1A" CornerRadius="4" BorderBrush="#FF333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="26"/>  <!-- Title bar (drag only) -->
                <RowDefinition Height="*"/>   <!-- Chart + bars -->
                <RowDefinition Height="46"/>  <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- Title Bar (drag area + minimize/close) -->
            <Border Grid.Row="0" Background="#FF222222" CornerRadius="4,4,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0">
                        <Button Content="&#xE921;" Style="{StaticResource TitleButton}" Click="Minimize_Click" FontFamily="Segoe MDL2 Assets"/>
                        <Button Content="&#xE8BB;" Style="{StaticResource TitleButton}" Click="Close_Click" FontFamily="Segoe MDL2 Assets"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Chart + Vertical Bars (edge to edge) -->
            <Grid Grid.Row="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>    <!-- Chart -->
                    <ColumnDefinition Width="60"/>   <!-- Bars -->
                </Grid.ColumnDefinitions>

                <!-- Telemetry Chart -->
                <local:TelemetryChart x:Name="Chart" Grid.Column="0"/>

                <!-- Vertical Bar Gauges -->
                <Grid Grid.Column="1" Margin="2,0,2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Throttle Bar -->
                    <Grid Grid.Column="0" Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Background="#FF111111" CornerRadius="2">
                            <Grid>
                                <Border Background="#FF00C800" CornerRadius="0,0,2,2" VerticalAlignment="Bottom" x:Name="ThrottleBar"/>
                                <TextBlock x:Name="ThrottlePercent" Text="0%" Foreground="White" FontSize="10" FontWeight="Bold" FontFamily="Segoe UI"
                                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,4,0,0"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="THR" Foreground="#FF00C800" FontSize="9" FontWeight="Bold" FontFamily="Segoe UI"
                                   HorizontalAlignment="Center" Grid.Row="1" Margin="0,2,0,0"/>
                    </Grid>

                    <!-- Brake Bar -->
                    <Grid Grid.Column="1" Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Background="#FF111111" CornerRadius="2">
                            <Grid>
                                <Border Background="#FFE02020" CornerRadius="0,0,2,2" VerticalAlignment="Bottom" x:Name="BrakeBar"/>
                                <TextBlock x:Name="BrakePercent" Text="0%" Foreground="White" FontSize="10" FontWeight="Bold" FontFamily="Segoe UI"
                                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,4,0,0"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="BRK" Foreground="#FFE02020" FontSize="9" FontWeight="Bold" FontFamily="Segoe UI"
                                   HorizontalAlignment="Center" Grid.Row="1" Margin="0,2,0,0"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#FF222222" Padding="8,0" CornerRadius="0,0,4,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status + Opacity -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="6" Height="6" x:Name="StatusDot" Fill="#FFE02020" Margin="0,0,4,0"/>
                        <TextBlock x:Name="StatusLabel" Text="iRACING" Foreground="#FFAAAAAA" FontSize="9" FontWeight="Bold" FontFamily="Segoe UI" VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" Text=" Disconnected" Foreground="#FF777777" FontSize="9" FontFamily="Segoe UI" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <TextBlock Text="Opacity" Foreground="#FF555555" FontSize="8" FontFamily="Segoe UI" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <Slider x:Name="OpacitySlider" Width="60" Minimum="0.3" Maximum="1.0" Value="1.0" VerticalAlignment="Center"
                                ValueChanged="OpacitySlider_ValueChanged"/>
                    </StackPanel>

                    <!-- Delta -->
                    <Border Grid.Column="2" Background="#FF2A2A2A" CornerRadius="3" Padding="20,3" Margin="6,4">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="DELTA" Foreground="#FF888888" FontSize="8" FontWeight="SemiBold" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock x:Name="DeltaLabel" Text="—" Foreground="#FFCCCCCC" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Last Lap -->
                    <Border Grid.Column="3" Background="#FF2A2A2A" CornerRadius="3" Padding="20,3" Margin="6,4">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="LAST LAP" Foreground="#FF888888" FontSize="8" FontWeight="SemiBold" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock x:Name="LastLapLabel" Text="—" Foreground="#FFCCCCCC" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Best -->
                    <Border Grid.Column="4" Background="#FF2A2A2A" CornerRadius="3" Padding="20,3" Margin="6,4,0,4">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="BEST" Foreground="#FF888888" FontSize="8" FontWeight="SemiBold" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock x:Name="BestLapLabel" Text="—" Foreground="#FFCCCCCC" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
